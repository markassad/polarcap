# Automatically activate uv environment when entering this directory
source_env_if_exists .venv/bin/activate

# Alternative: Use uv directly
# eval "$(uv run --env)"

# Set Python path for development
export PYTHONPATH="${PWD}/src:${PYTHONPATH}"

# Optional: Set environment variables for development
export STREAMLIT_SERVER_ADDRESS=localhost
export STREAMLIT_SERVER_PORT=8501

# Hugging Face token for API access
# Create a .env.local file with: HF_TOKEN=hf_your_token_here
# This file is gitignored and won't be committed
if [ -f .env.local ]; then
  source .env.local
fi
